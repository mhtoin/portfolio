---
const currentYear = new Date().getFullYear();

const socialLinks = [
  {
    name: 'GitHub',
    href: 'https://github.com/mhtoin',
    icon: 'github',
  },
  {
    name: 'LinkedIn',
    href: 'https://linkedin.com/in/mhtoin',
    icon: 'linkedin',
  },
  {
    name: 'Twitter',
    href: 'https://twitter.com/mhtoin',
    icon: 'twitter',
  },
];

const footerLinks = [
  { href: '/', label: 'Home' },
  { href: '/projects', label: 'Projects' },
  { href: '/about', label: 'About' },
  { href: '/blog', label: 'Blog' },
];
---

<footer class="bg-pastel-surface/80 dark:bg-pastel-terminal-surface/80 border-t-2 border-terminal-border dark:border-terminal-border backdrop-blur-sm">
  <div class="container-custom py-12">
    <!-- ASCII art divider -->
    <div class="text-center mb-8">
      <pre class="ascii-art text-terminal-green dark:text-terminal-green text-xs leading-tight">
════════════════════════════════════════════
      </pre>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
      <!-- Brand -->
      <div class="md:col-span-2">
        <a href="/" class="text-xl font-mono font-bold text-gray-900 dark:text-terminal-text">
          <span class="terminal-prompt"></span>mhtoin
        </a>
        <p class="mt-2 text-gray-600 dark:text-terminal-text-muted max-w-md font-mono text-sm">
          <span class="text-terminal-green">//</span> Passionate developer crafting digital experiences with modern technologies.<br>
          <span class="text-terminal-green">//</span> Always learning, always building.
        </p>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-sm font-mono font-semibold text-gray-900 dark:text-terminal-text uppercase tracking-wider border-b-2 border-terminal-border pb-2">
          <span class="text-pastel-pink-500">[</span> Quick Links <span class="text-pastel-pink-500">]</span>
        </h3>
        <ul class="mt-4 space-y-2">
          {footerLinks.map(({ href, label }) => (
            <li>
              <a
                href={href}
                class="text-gray-600 dark:text-terminal-text-muted hover:text-terminal-green dark:hover:text-terminal-green transition-colors font-mono text-sm"
              >
                <span class="text-terminal-green">&gt;</span> {label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <!-- Social Links -->
      <div>
        <h3 class="text-sm font-mono font-semibold text-gray-900 dark:text-terminal-text uppercase tracking-wider border-b-2 border-terminal-border pb-2">
          <span class="text-terminal-cyan">[</span> Connect <span class="text-terminal-cyan">]</span>
        </h3>
        <div class="mt-4 flex space-x-4">
          {socialLinks.map(({ name, href, icon }) => (
            <a
              href={href}
              target="_blank"
              rel="noopener noreferrer"
              class="text-gray-400 hover:text-terminal-green dark:hover:text-terminal-green transition-colors border-2 border-transparent hover:border-terminal-green p-2"
              aria-label={`Follow on ${name}`}
            >
              {icon === 'github' && (
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              )}
              {icon === 'linkedin' && (
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              )}
              {icon === 'twitter' && (
                <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                </svg>
              )}
            </a>
          ))}
        </div>
      </div>
    </div>
    
    <!-- Bottom Bar -->
    <div class="mt-8 pt-8 border-t-2 border-terminal-border dark:border-terminal-border">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-gray-500 dark:text-terminal-text-muted text-sm font-mono">
          <span class="text-terminal-green">©</span> {currentYear} mhtoin. All rights reserved.
        </p>
        <p class="text-gray-500 dark:text-terminal-text-muted text-sm mt-2 md:mt-0 font-mono">
          Built with <span class="text-terminal-green">Astro</span> & 
          <span class="text-pastel-pink-500">Sanity</span>
        </p>
      </div>
    </div>
  </div>
</footer>