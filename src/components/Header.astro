---
import ThemeToggle from './ThemeToggle.astro';

const currentPath = Astro.url.pathname;

const navItems = [
  { href: '/', label: 'Home' },
  { href: '/projects', label: 'Projects' },
  { href: '/about', label: 'About' },
  { href: '/blog', label: 'Blog' },
  { href: '/studio', label: 'CMS', external: true },
];
---

<header class="sticky top-0 z-50 w-full border-b-2 border-terminal-border dark:border-terminal-border bg-pastel-surface/90 dark:bg-pastel-terminal-surface/90 backdrop-blur-md">
  <nav class="container-custom">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a 
          href="/" 
          class="text-xl font-mono font-bold text-gray-900 dark:text-terminal-green hover:text-terminal-green dark:hover:text-terminal-cyan transition-colors focus-visible terminal-prompt"
          aria-label="Go to homepage"
        >
          mhtoin
        </a>
      </div>
      
      <!-- Desktop Navigation -->
      <div class="hidden md:flex items-center space-x-8">
        {navItems.map(({ href, label, external }) => (
          <a
            href={href}
            class={`text-sm font-mono font-medium transition-colors hover:text-terminal-green dark:hover:text-terminal-cyan focus-visible ${
              currentPath === href 
                ? 'text-terminal-green dark:text-terminal-green' 
                : 'text-gray-600 dark:text-terminal-text-muted'
            } ${external ? 'opacity-75' : ''}`}
            target={external ? '_blank' : undefined}
            rel={external ? 'noopener noreferrer' : undefined}
          >
            {label}
            {external && (
              <svg class="inline-block w-3 h-3 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            )}
          </a>
        ))}
      </div>
      
      <!-- Theme Toggle & Mobile Menu Button -->
      <div class="flex items-center space-x-2">
        <ThemeToggle />
        
        <!-- Mobile Menu Button -->
        <button
          type="button"
          class="md:hidden inline-flex items-center justify-center p-2 border-2 border-terminal-border text-gray-500 dark:text-terminal-text-muted hover:text-terminal-green dark:hover:text-terminal-green hover:border-terminal-green focus-visible"
          aria-expanded="false"
          aria-label="Open main menu"
          id="mobile-menu-button"
        >
          <svg class="block h-6 w-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
          </svg>
        </button>
      </div>
    </div>
    
    <!-- Mobile Navigation Menu -->
    <div class="md:hidden hidden border-t-2 border-terminal-border" id="mobile-menu">
      <div class="px-2 pt-2 pb-3 space-y-1">
        {navItems.map(({ href, label, external }) => (
          <a
            href={href}
            class={`block px-3 py-2 border-2 border-transparent text-base font-mono font-medium transition-colors hover:text-terminal-green dark:hover:text-terminal-cyan hover:border-terminal-green focus-visible ${
              currentPath === href 
                ? 'text-terminal-green dark:text-terminal-green border-terminal-green' 
                : 'text-gray-600 dark:text-terminal-text'
            } ${external ? 'opacity-75' : ''}`}
            target={external ? '_blank' : undefined}
            rel={external ? 'noopener noreferrer' : undefined}
          >
            {label}
            {external && (
              <svg class="inline-block w-3 h-3 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            )}
          </a>
        ))}
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle functionality
  document.addEventListener('DOMContentLoaded', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        const isHidden = mobileMenu.classList.contains('hidden');
        mobileMenu.classList.toggle('hidden');
        mobileMenuButton.setAttribute('aria-expanded', isHidden.toString());
      });
    }
  });
  
  // Handle view transitions
  document.addEventListener('astro:after-swap', () => {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', () => {
        const isHidden = mobileMenu.classList.contains('hidden');
        mobileMenu.classList.toggle('hidden');
        mobileMenuButton.setAttribute('aria-expanded', isHidden.toString());
      });
    }
  });
</script>