---
export const prerender = true;

import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/Hero.astro';
import { getFeaturedProjects } from '@/lib/sanity';

// Fetch featured projects from Sanity with GitHub fallback
const featuredProjects = await getFeaturedProjects();
---

<BaseLayout title="mhtoin - Full-Stack Developer & Digital Creator">
  <!-- Hero Section -->
  <Hero />
  
  <!-- Featured Projects Section -->
  <section class="section-padding bg-gradient-to-br from-lavender-50 via-pastel-surface to-mint-50 dark:from-pastel-surface-dark dark:via-primary-900/10 dark:to-mint-900/10">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Featured Projects
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          Here are some of my recent projects that showcase my skills and passion for creating 
          innovative digital solutions.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredProjects.map((project, index) => (
          <div class="card-hover group">
            <div class="relative overflow-hidden rounded-t-lg">
              <div class={`aspect-video flex items-center justify-center ${
                index % 3 === 0 
                  ? 'bg-gradient-to-br from-lavender-200 to-primary-200 dark:from-lavender-400 dark:to-primary-400'
                  : index % 3 === 1
                  ? 'bg-gradient-to-br from-accent-200 to-rose-200 dark:from-accent-400 dark:to-rose-400'
                  : 'bg-gradient-to-br from-mint-200 to-sky-200 dark:from-mint-400 dark:to-sky-400'
              }`}>
                <div class="text-6xl opacity-30">
                  ðŸ’»
                </div>
              </div>
              <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-10 transition-opacity"></div>
            </div>
            
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
                {project.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-400 mb-4 line-clamp-2">
                {project.description}
              </p>
              
              <div class="flex flex-wrap gap-2 mb-4">
                {project.technologies?.slice(0, 3).map((tech) => (
                  <span class="px-2 py-1 text-xs font-medium bg-primary-100 dark:bg-primary-900 text-primary-800 dark:text-primary-200 rounded-full">
                    {tech}
                  </span>
                ))}
              </div>
              
              <div class="flex space-x-3">
                {project.liveUrl && (
                  <a 
                    href={project.liveUrl} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="btn btn-primary btn-sm"
                  >
                    Live Demo
                  </a>
                )}
                {project.githubUrl && (
                  <a 
                    href={project.githubUrl} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="btn btn-secondary btn-sm"
                  >
                    Code
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a href="/projects" class="btn btn-primary btn-lg">
          View All Projects
        </a>
      </div>
    </div>
  </section>
  
  <!-- Skills Section -->
  <section class="section-padding">
    <div class="container-custom">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
          Skills & Technologies
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-400 max-w-2xl mx-auto">
          I work with modern technologies to build scalable, performant applications.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-lavender-200 to-primary-300 dark:from-lavender-400 dark:to-primary-500 rounded-xl flex items-center justify-center mx-auto mb-4 shadow-lg">
            <svg class="w-8 h-8 text-primary-700 dark:text-primary-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Frontend</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Creating beautiful, responsive user interfaces
          </p>
          <div class="flex flex-wrap gap-2 justify-center">
            {['React', 'Vue.js', 'Astro', 'TypeScript', 'Tailwind CSS'].map((skill, index) => (
              <span class={`px-3 py-1 text-sm rounded-full ${
                index % 3 === 0 
                  ? 'bg-lavender-100 dark:bg-lavender-400 text-lavender-800 dark:text-lavender-100'
                  : index % 3 === 1
                  ? 'bg-primary-100 dark:bg-primary-400 text-primary-800 dark:text-primary-100'
                  : 'bg-mint-100 dark:bg-mint-400 text-mint-800 dark:text-mint-100'
              }`}>
                {skill}
              </span>
            ))}
          </div>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-accent-200 to-rose-300 dark:from-accent-400 dark:to-rose-500 rounded-xl flex items-center justify-center mx-auto mb-4 shadow-lg">
            <svg class="w-8 h-8 text-accent-700 dark:text-accent-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">Backend</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Building robust APIs and server-side solutions
          </p>
          <div class="flex flex-wrap gap-2 justify-center">
            {['Node.js', 'Python', 'PostgreSQL', 'MongoDB', 'Docker'].map((skill, index) => (
              <span class={`px-3 py-1 text-sm rounded-full ${
                index % 3 === 0 
                  ? 'bg-accent-100 dark:bg-accent-400 text-accent-800 dark:text-accent-100'
                  : index % 3 === 1
                  ? 'bg-rose-100 dark:bg-rose-400 text-rose-800 dark:text-rose-100'
                  : 'bg-peach-100 dark:bg-peach-400 text-peach-800 dark:text-peach-100'
              }`}>
                {skill}
              </span>
            ))}
          </div>
        </div>
        
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-mint-200 to-sky-300 dark:from-mint-400 dark:to-sky-500 rounded-xl flex items-center justify-center mx-auto mb-4 shadow-lg">
            <svg class="w-8 h-8 text-mint-700 dark:text-mint-200" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">DevOps</h3>
          <p class="text-gray-600 dark:text-gray-400 mb-4">
            Deploying and maintaining scalable applications
          </p>
          <div class="flex flex-wrap gap-2 justify-center">
            {['AWS', 'Vercel', 'GitHub Actions', 'Nginx', 'Linux'].map((skill, index) => (
              <span class={`px-3 py-1 text-sm rounded-full ${
                index % 3 === 0 
                  ? 'bg-mint-100 dark:bg-mint-400 text-mint-800 dark:text-mint-100'
                  : index % 3 === 1
                  ? 'bg-sky-100 dark:bg-sky-400 text-sky-800 dark:text-sky-100'
                  : 'bg-lavender-100 dark:bg-lavender-400 text-lavender-800 dark:text-lavender-100'
              }`}>
                {skill}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="section-padding bg-gradient-to-r from-primary-500 via-accent-500 to-lavender-500 dark:from-primary-400 dark:via-accent-400 dark:to-lavender-400">
    <div class="container-custom text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">
        Let's Work Together
      </h2>
      <p class="text-xl text-white/90 mb-8 max-w-2xl mx-auto">
        I'm always interested in new opportunities and exciting projects. 
        Let's discuss how we can bring your ideas to life.
      </p>
      <a 
        href="/about" 
        class="btn bg-white/90 text-primary-700 hover:bg-white btn-lg shadow-lg backdrop-blur-sm"
      >
        Get In Touch
      </a>
    </div>
  </section>
</BaseLayout>