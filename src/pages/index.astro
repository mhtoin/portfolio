---
export const prerender = true;

import BaseLayout from '@/layouts/BaseLayout.astro';
import Hero from '@/components/Hero.astro';
import { getFeaturedProjects } from '@/lib/sanity';

// Fetch featured projects from Sanity with GitHub fallback
const featuredProjects = await getFeaturedProjects();
---

<BaseLayout title="mhtoin - Full-Stack Developer & Digital Creator">
  <!-- Hero Section -->
  <Hero />
  
  <!-- Featured Projects Section -->
  <section class="section-padding bg-gradient-to-br from-pastel-bg via-pastel-pink-50 to-lavender-50 dark:from-pastel-terminal-bg dark:via-pastel-terminal-bg dark:to-pastel-terminal-bg relative">
    <!-- Terminal grid pattern overlay -->
    <div class="absolute inset-0 opacity-5 dark:opacity-10" 
         style="background-image: 
           repeating-linear-gradient(0deg, #00ff41, #00ff41 1px, transparent 1px, transparent 40px),
           repeating-linear-gradient(90deg, #00ff41, #00ff41 1px, transparent 1px, transparent 40px);">
    </div>
    
    <div class="container-custom relative z-10">
      <!-- ASCII art section divider -->
      <div class="text-center mb-16">
        <pre class="ascii-art text-terminal-green dark:text-terminal-green text-xs md:text-sm leading-tight mb-4">
┌─────────────────────────────────────────┐
│             FEATURED_PROJECTS           │
└─────────────────────────────────────────┘
        </pre>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-terminal-text mb-4 font-mono">
          <span class="text-terminal-green">[</span> Featured Projects <span class="text-terminal-green">]</span>
        </h2>
        <p class="text-lg text-gray-600 dark:text-terminal-text-muted max-w-2xl mx-auto font-mono">
          <span class="text-terminal-green">//</span> Here are some of my recent projects that showcase my skills and passion<br>
          <span class="text-terminal-green">//</span> for creating innovative digital solutions.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredProjects.map((project, index) => (
          <div class="card-hover group border-2 border-terminal-border dark:border-terminal-border bg-pastel-surface/80 dark:bg-pastel-terminal-surface/80 backdrop-blur-sm">
            <div class="relative overflow-hidden">
              <div class={`aspect-video flex items-center justify-center border-b-2 border-terminal-border ${
                index % 3 === 0 
                  ? 'bg-gradient-to-br from-terminal-green/10 to-pastel-pink-100 dark:from-terminal-green/20 dark:to-pastel-pink-900/30'
                  : index % 3 === 1
                  ? 'bg-gradient-to-br from-pastel-pink-100 to-terminal-cyan/10 dark:from-pastel-pink-900/30 dark:to-terminal-cyan/20'
                  : 'bg-gradient-to-br from-terminal-cyan/10 to-terminal-green/10 dark:from-terminal-cyan/20 dark:to-terminal-green/20'
              }`}>
                <div class="text-6xl opacity-50 font-mono">
                  💻
                </div>
              </div>
              <div class="absolute inset-0 bg-terminal-bg opacity-0 group-hover:opacity-10 transition-opacity"></div>
            </div>
            
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-terminal-text mb-2 font-mono">
                <span class="text-terminal-green">&gt;</span> {project.title}
              </h3>
              <p class="text-gray-600 dark:text-terminal-text-muted mb-4 line-clamp-2 font-mono text-sm">
                {project.description}
              </p>
              
              <div class="flex flex-wrap gap-2 mb-4">
                {project.technologies?.slice(0, 3).map((tech, techIndex) => (
                  <span class={`px-2 py-1 text-xs font-mono font-medium border border-current ${
                    techIndex % 3 === 0 
                      ? 'bg-terminal-green/10 text-terminal-green border-terminal-green dark:bg-terminal-green/20' 
                      : techIndex % 3 === 1
                      ? 'bg-pastel-pink-100 text-pastel-pink-700 border-pastel-pink-300 dark:bg-pastel-pink-900/20 dark:text-pastel-pink-300 dark:border-pastel-pink-700'
                      : 'bg-terminal-cyan/10 text-terminal-cyan border-terminal-cyan dark:bg-terminal-cyan/20'
                  }`}>
                    {tech}
                  </span>
                ))}
              </div>
              
              <div class="flex space-x-3">
                {project.liveUrl && (
                  <a 
                    href={project.liveUrl} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="btn btn-primary btn-sm"
                  >
                    <span class="terminal-prompt"></span>Live Demo
                  </a>
                )}
                {project.githubUrl && (
                  <a 
                    href={project.githubUrl} 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="btn btn-secondary btn-sm"
                  >
                    <span class="text-pastel-pink-600 dark:text-pastel-pink-400">&gt;</span> Code
                  </a>
                )}
              </div>
            </div>
          </div>
        ))}
      </div>
      
      <div class="text-center mt-12">
        <a href="/projects" class="btn btn-primary btn-lg">
          <span class="terminal-prompt"></span>View All Projects
        </a>
      </div>
    </div>
  </section>
  
  <!-- Skills Section -->
  <section class="section-padding relative">
    <!-- Pixel art background pattern -->
    <div class="absolute inset-0 opacity-5 dark:opacity-10" 
         style="background-image: 
           repeating-linear-gradient(45deg, #ff69b4, #ff69b4 2px, transparent 2px, transparent 20px),
           repeating-linear-gradient(-45deg, #00ffff, #00ffff 2px, transparent 2px, transparent 20px);">
    </div>
    
    <div class="container-custom relative z-10">
      <div class="text-center mb-16">
        <pre class="ascii-art text-pastel-pink-400 dark:text-pastel-pink-400 text-xs md:text-sm leading-tight mb-4">
╔══════════════════════════════════════════╗
║            SKILLS & TECHNOLOGIES         ║
╚══════════════════════════════════════════╝
        </pre>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-terminal-text mb-4 font-mono">
          <span class="text-pastel-pink-500">{</span> Skills & Technologies <span class="text-pastel-pink-500">}</span>
        </h2>
        <p class="text-lg text-gray-600 dark:text-terminal-text-muted max-w-2xl mx-auto font-mono">
          <span class="text-terminal-green">//</span> I work with modern technologies to build scalable, performant applications.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center border-2 border-terminal-border dark:border-terminal-border p-6 bg-pastel-surface/50 dark:bg-pastel-terminal-surface/50 backdrop-blur-sm hover:border-terminal-green dark:hover:border-terminal-green transition-colors">
          <div class="w-16 h-16 border-2 border-terminal-green bg-terminal-green/10 dark:bg-terminal-green/20 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-terminal-green" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-terminal-text mb-2 font-mono">
            <span class="text-terminal-green">[</span>Frontend<span class="text-terminal-green">]</span>
          </h3>
          <p class="text-gray-600 dark:text-terminal-text-muted mb-4 font-mono text-sm">
            Creating beautiful, responsive user interfaces
          </p>
          <div class="flex flex-wrap gap-2 justify-center">
            {['React', 'Vue.js', 'Astro', 'TypeScript', 'Tailwind CSS'].map((skill, index) => (
              <span class={`px-3 py-1 text-sm font-mono border ${
                index % 3 === 0 
                  ? 'bg-terminal-green/10 text-terminal-green border-terminal-green dark:bg-terminal-green/20'
                  : index % 3 === 1
                  ? 'bg-pastel-pink-100 text-pastel-pink-700 border-pastel-pink-300 dark:bg-pastel-pink-900/20 dark:text-pastel-pink-300 dark:border-pastel-pink-700'
                  : 'bg-terminal-cyan/10 text-terminal-cyan border-terminal-cyan dark:bg-terminal-cyan/20'
              }`}>
                {skill}
              </span>
            ))}
          </div>
        </div>
        
        <div class="text-center border-2 border-terminal-border dark:border-terminal-border p-6 bg-pastel-surface/50 dark:bg-pastel-terminal-surface/50 backdrop-blur-sm hover:border-pastel-pink-400 dark:hover:border-pastel-pink-400 transition-colors">
          <div class="w-16 h-16 border-2 border-pastel-pink-400 bg-pastel-pink-100/50 dark:bg-pastel-pink-900/30 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-pastel-pink-600 dark:text-pastel-pink-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-terminal-text mb-2 font-mono">
            <span class="text-pastel-pink-500">[</span>Backend<span class="text-pastel-pink-500">]</span>
          </h3>
          <p class="text-gray-600 dark:text-terminal-text-muted mb-4 font-mono text-sm">
            Building robust APIs and server-side solutions
          </p>
          <div class="flex flex-wrap gap-2 justify-center">
            {['Node.js', 'Python', 'PostgreSQL', 'MongoDB', 'Docker'].map((skill, index) => (
              <span class={`px-3 py-1 text-sm font-mono border ${
                index % 3 === 0 
                  ? 'bg-pastel-pink-100 text-pastel-pink-700 border-pastel-pink-300 dark:bg-pastel-pink-900/20 dark:text-pastel-pink-300 dark:border-pastel-pink-700'
                  : index % 3 === 1
                  ? 'bg-terminal-amber/10 text-terminal-amber border-terminal-amber dark:bg-terminal-amber/20'
                  : 'bg-terminal-purple/10 text-terminal-purple border-terminal-purple dark:bg-terminal-purple/20'
              }`}>
                {skill}
              </span>
            ))}
          </div>
        </div>
        
        <div class="text-center border-2 border-terminal-border dark:border-terminal-border p-6 bg-pastel-surface/50 dark:bg-pastel-terminal-surface/50 backdrop-blur-sm hover:border-terminal-cyan dark:hover:border-terminal-cyan transition-colors">
          <div class="w-16 h-16 border-2 border-terminal-cyan bg-terminal-cyan/10 dark:bg-terminal-cyan/20 flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-terminal-cyan" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M9 19l3 3m0 0l3-3m-3 3V10" />
            </svg>
          </div>
          <h3 class="text-xl font-semibold text-gray-900 dark:text-terminal-text mb-2 font-mono">
            <span class="text-terminal-cyan">[</span>DevOps<span class="text-terminal-cyan">]</span>
          </h3>
          <p class="text-gray-600 dark:text-terminal-text-muted mb-4 font-mono text-sm">
            Deploying and maintaining scalable applications
          </p>
          <div class="flex flex-wrap gap-2 justify-center">
            {['AWS', 'Vercel', 'GitHub Actions', 'Nginx', 'Linux'].map((skill, index) => (
              <span class={`px-3 py-1 text-sm font-mono border ${
                index % 3 === 0 
                  ? 'bg-terminal-cyan/10 text-terminal-cyan border-terminal-cyan dark:bg-terminal-cyan/20'
                  : index % 3 === 1
                  ? 'bg-terminal-green/10 text-terminal-green border-terminal-green dark:bg-terminal-green/20'
                  : 'bg-terminal-purple/10 text-terminal-purple border-terminal-purple dark:bg-terminal-purple/20'
              }`}>
                {skill}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="section-padding bg-gradient-to-r from-terminal-green/20 via-pastel-pink-200 to-terminal-cyan/20 dark:from-terminal-green/10 dark:via-pastel-pink-900/30 dark:to-terminal-cyan/10 relative">
    <!-- Terminal matrix rain effect -->
    <div class="absolute inset-0 opacity-10 dark:opacity-20" 
         style="background-image: 
           repeating-linear-gradient(0deg, #00ff41, #00ff41 1px, transparent 1px, transparent 30px),
           repeating-linear-gradient(90deg, #ff69b4, #ff69b4 1px, transparent 1px, transparent 60px);">
    </div>
    
    <div class="container-custom text-center relative z-10">
      <pre class="ascii-art text-terminal-green dark:text-terminal-green text-xs md:text-sm leading-tight mb-4">
▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄▄
██ ▄▄▄ █▀▄▄▀█ ▄▄▄ █ ▄▄▄▄ █ ▄▄▄▄ █ ▄▄▄ ██
██▄▄▄▄▄█ ██ █▄▄▄▄▄█ ▄▄▄▄▄█ ▄▄▄▄▄█▄▄▄▄▄██
▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀▀
      </pre>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-terminal-text mb-4 font-mono">
        <span class="text-terminal-green">&gt;</span> Let's Work Together <span class="text-terminal-green">&lt;</span>
      </h2>
      <p class="text-xl text-gray-700 dark:text-terminal-text-muted mb-8 max-w-2xl mx-auto font-mono">
        <span class="text-pastel-pink-500">//</span> I'm always interested in new opportunities and exciting projects.<br>
        <span class="text-pastel-pink-500">//</span> Let's discuss how we can bring your ideas to life.
      </p>
      <a 
        href="/about" 
        class="btn border-2 border-terminal-green bg-terminal-green/10 text-terminal-green hover:bg-terminal-green hover:text-terminal-bg dark:bg-terminal-green/20 dark:hover:bg-terminal-green btn-lg font-mono"
      >
        <span class="terminal-prompt"></span>Get In Touch
      </a>
    </div>
  </section>
</BaseLayout>